<MudGrid Justify="Justify.Center" Class="pa-10">
    <MudItem xs="7" sm="4">
        <MudPaper Class="pa-4">
            <EditForm Model="@model" OnValidSubmit="OnValidSubmit">

                <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-3">Sign In</MudText>

                <MudTextField T="string"
                              @bind-Value="model.FirstName" For="@(() => model.FirstName)"
                              Label="FirstName"
                              Required="true"
                              RequiredError="FirstName is required!"
                              HelperText="Input your FirstName"/>
                <MudTextField T="string"
                              @bind-Value="model.SecondName" For="@(() => model.SecondName)"
                              Label="SecondName"
                              Required="true"
                              RequiredError="SecondName is required!"
                              HelperText="Input your username"/>
                <MudTextField T="string"
                              @bind-Value="model.Email" For="@(() => model.Email)"
                              Label="Email"
                              Required="true"
                              RequiredError="Email is required!"
                              HelperText="Input your username"
                              Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})" />
                <MudTextField @bind-Value="model.Password" For="@(() => model.Password)"
                              Label="Password"
                              HelperText="Input your password"
                              InputType="@passwordInput"
                              Adornment="Adornment.End"
                              AdornmentIcon="@passwordInputIcon"
                              Required="true"
                              RequiredError="Password is required!"
                              OnAdornmentClick="TogglePasswordVisibility"/>


                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           ButtonType="ButtonType.Submit">Sign Up</MudButton>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private SignUpModel model = new();

    private bool passwordVisibility;
    private InputType passwordInput = InputType.Password;
    private string passwordInputIcon = Icons.Material.Filled.VisibilityOff;

    private List<string> errors = new();
    private bool showErrors;

    // protected override async Task OnInitializedAsync()
    // {
    //     model.FrontendUrl = NavigationManager.BaseUri + "confirm-email?token={0}&email={1}";
    // }

    void TogglePasswordVisibility()
    {
        @if (passwordVisibility)
        {
            passwordVisibility = false;
            passwordInput = InputType.Password;
            passwordInputIcon = Icons.Material.Filled.VisibilityOff;
        }
        else
        {
            passwordVisibility = true;
            passwordInput = InputType.Text;
            passwordInputIcon = Icons.Material.Filled.Visibility;
        }
    }

    private async Task OnValidSubmit()
    {
        showErrors = false;

        var result = await profileService.Register(model);

        if (result.IsSuccessful) NavigationManager.NavigateTo("/login");
        else
        {
            errors = result.Errors.Select(error => error.Message).ToList();
            showErrors = true;
        }
    }
}





